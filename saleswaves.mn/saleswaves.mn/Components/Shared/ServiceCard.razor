<div class="service-card">
    <div class="service-icon">
        @IconSvg
    </div>
    <h3>@Title</h3>
    <p>@Description</p>
</div>

@code {
    [Parameter, EditorRequired]
    public RenderFragment IconSvg { get; set; } = default!;

    [Parameter, EditorRequired]
    public string Title { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public string Description { get; set; } = string.Empty;
}
